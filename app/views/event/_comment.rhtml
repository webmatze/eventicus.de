<div class="comment">
	<div class="comment_head">
		<%= link_to @comment.user.login, user_url(:id => @comment.user.login) %> commented <span class="small-date"><%= time_ago_or_time_stamp(@comment.created_at) %></span>
	</div>
	<div class="comment_top">
	</div>
	<div class="comment_body">
		<%= @comment.comment %>
	</div>
</div>
